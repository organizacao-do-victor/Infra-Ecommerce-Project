#cd back to root folder if in automation folder
if [ "$(basename $(pwd))" = "automation" ];then
	cd ..
fi

#cd to terraform folder
cd terraform && \
#Waits for confirmation, -auto-approve removes it
terraform apply && \
#save outputs to file
terraform output >> ../output && \
#cds out
cd .. && \

#format ansible hosts and other files from output
python3 automation/format.py 
#&& \

#ansible-playbook playbook.yaml -i hosts